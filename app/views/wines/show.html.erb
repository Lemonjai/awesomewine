<h1>Show</h1>

<h3><%= @wine.name %></h3>

<p>
	<%= image_tag @wine.image.thumb.url %><br>
	<%= @wine.manufacture %><br>
	<%= @wine.city %><br>
	<%= @wine.country %><br>
	<%= @wine.year %><br>
	<%= @wine.summary %><br>
